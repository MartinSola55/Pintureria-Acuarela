@model IEnumerable<Pinturería_Acuarela.Capacity>

@{
    ViewBag.Title = "Capacidades";
}

<h2>Capacidades</h2>

<p>
    @Html.ActionLink("Cargar nueva capacidad", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.capacity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.capacity)
        </td>
        <td>
            <div class="d-flex flex-row justify-content-center">
                <a class='btn btn-success me-4' href="Capacities/Edit/@item.id"><i class='bi bi-pencil-square'></i></a>
                <a class='btn btn-danger ms-4' href="Capacities/Delete/@item.id"><i class='bi bi-trash3'></i></a>
            </div>
        </td>
    </tr>
}

</table>
