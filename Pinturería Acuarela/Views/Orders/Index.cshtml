@model IEnumerable<Pinturería_Acuarela.Order>

@{
    ViewBag.Title = "Ordenes";
}

<h2>Ordenes</h2>

<p>
    @Html.ActionLink("Realizar pedido", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Sucursal
        </th>
        <th>
            Día
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Business.adress)
        </td>
        <td>
            @(item.date.ToShortDateString() + " - " + item.date.ToShortTimeString())
        </td>
        <td>
            @(item.status == false ? "En espera" : "Confirmado")
        </td>
        <td>
            <div class="d-flex flex-row justify-content-center">
                <a class='btn btn-success me-4' href="~/Orders/Details/@item.id">Ver orden</a>
                <a class='btn btn-success me-4' href="~/Orders/Edit/@item.id"><i class='bi bi-pencil-square'></i></a>
                <a class='btn btn-danger ms-4' href="~/Orders/Delete/@item.id"><i class='bi bi-trash3'></i></a>
            </div>
        </td>
    </tr>
}

</table>
