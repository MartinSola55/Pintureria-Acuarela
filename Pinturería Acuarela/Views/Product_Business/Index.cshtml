@model Pinturería_Acuarela.Product_Business

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/orders.css" rel="stylesheet" />

<h1 class="text-center">Productos de @Model.Business.adress</h1>
<hr class="pb-3" />

@{
    if (TempData["SuccessMessage"] != null)
    {
        <div id="alertCreate" class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>@TempData["SuccessMessage"]</strong>
        </div>

        <script>
            setTimeout(function () {
                document.getElementById("alertCreate").style.display = "none";
            }, 3000);
        </script>
    }
    if (TempData["DeleteMessage"] != null)
    {
        <div id="alertDelete" class="alert alert-primary" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>@TempData["DeleteMessage"] </strong>
        </div>

        <script>
            setTimeout(function () {
                document.getElementById("alertDelete").style.display = "none";
            }, 3000);
        </script>
    }
}

@using (Html.BeginForm("Edit", "Product_Business", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("id_product")
    @Html.Hidden("id_business", Model.Business.id)
    <!-- Modal -->
    <div class="modal modal-lg" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Cargar stock</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body d-flex flex-column">
                    <div class="d-flex flex-column">
                        <div class="d-flex flex-row justify-content-center align-items-center">
                            <label class="pe-3">Stock existente: </label>
                            <div class='d-flex flex-row justify-content-center ps-3'>
                                <div class='value-button' id='decrease_stock' onclick='decreaseValue("stock")' value='Decrease Value'>-</div>
                                @Html.TextBoxFor(model => model.stock, null, new { @type = "number", @id = "stock", @class = "number" })
                                <div class='value-button' id='increase_stock' onclick='increaseValue("stock")' value='Increase Value'>+</div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.stock, null, new { @class = "text-center text-danger mb-4" })
                    </div>
                    <div class="d-flex flex-column">
                        <div class="d-flex flex-row justify-content-center align-items-center">
                            <label class="pe-3">Stock mínimo: </label>
                            <div class='d-flex flex-row justify-content-center ps-3'>
                                <div class='value-button' id='decrease_minimum_stock' onclick='decreaseValue("minimum_stock")' value='Decrease Value'>-</div>
                                @Html.TextBoxFor(model => model.minimum_stock, null, new { @type = "number", @id = "minimum_stock", @class = "number" })
                                <div class='value-button' id='increase_minimum_stock' onclick='increaseValue("minimum_stock")' value='Increase Value'>+</div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.minimum_stock, null, new { @class = "text-center text-danger mb-4" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnSendForm" type="submit" class="btn btn-primary">Actualizar stock</button>
                    <button id="modalCerrar" type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}



<div class="container mt-4">
    <a class="btn btn-dark mb-4" href="/Product_Business/Create/@Model.Business.id">Agregar un producto</a>

    <table id='dataTable' class='container table table-light table-striped table-bordered table-hover pt-4'>
        <thead class='table-dark'>
            <tr>
                <td class='text-center'></td>
                <td class='text-center d-flex flex-row'>
                    <input class="form-control" id="txtSearch" placeholder="Cód. interno | Nombre" />
                    <button id="btnSearch" type="button" class="btn btn-primary">
                        <i class="bi bi-search"></i>
                    </button>
                </td>
                <td class='text-center'>@Html.DropDownList("id_brand", null, "Seleccionar", htmlAttributes: new { @class = "form-control", @id = "id_brand" })</td>
                <td class='text-center'>@Html.DropDownList("id_category", null, "Seleccionar", htmlAttributes: new { @class = "form-control", @id = "id_category" })</td>
                <td class='text-center'>@Html.DropDownList("id_subcategory", null, "Seleccionar", htmlAttributes: new { @class = "form-control", @id = "id_subcategory" })</td>
                <td class='text-center'>@Html.DropDownList("id_color", null, "Seleccionar", htmlAttributes: new { @class = "form-control", @id = "id_color" })</td>
                <td class='text-center'>@Html.DropDownList("id_capacity", null, "Seleccionar", htmlAttributes: new { @class = "form-control", @id = "id_capacity" })</td>
                <td class='text-center'><input type="button" value="Filtrar" class="btn btn-outline-light" id="btnFilter" /></td>
                <td></td>
            </tr>
            <tr class='fw-bold'>
                <td class='text-center'>Cód. Interno</td>
                <td class='text-center'>Producto</td>
                <td class='text-center'>Marca</td>
                <td class='text-center'>Categoría</td>
                <td class='text-center'>Subcategoría</td>
                <td class='text-center'>Color</td>
                <td class='text-center'>Capacidad</td>
                <td class='text-center'>Stock</td>
                <td class='text-center'>Añadir</td>
            </tr>
        </thead>
        <tbody id="contentTable">
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/product_business_index.js"></script>
