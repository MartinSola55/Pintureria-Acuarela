@model IEnumerable<Pinturería_Acuarela.Product>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Cargar un producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Codigo Interno
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Marca
        </th>
        <th>
            Categoria
        </th>
        <th>
            Subcategoria
        </th>
        <th>
            Color
        </th>
        <th>
            Capacidad
        </th>
        <th>
            Cantidad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.internal_code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subcategory.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity.capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
            <div class="d-flex flex-row justify-content-center">
                <a class='btn btn-success me-4' href="Products/Edit/@item.id"><i class='bi bi-pencil-square'></i></a>
                <a class='btn btn-danger ms-4' href="Products/Delete/@item.id"><i class='bi bi-trash3'></i></a>
            </div>
        </td>
    </tr>
}

</table>
