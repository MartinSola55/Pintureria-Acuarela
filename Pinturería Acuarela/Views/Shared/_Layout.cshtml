<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pinturería Acuarela</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/navbar.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="icon" type="image/jpg" href="~/Content/Images/favicon.png" />
</head>
<body>
    <header style="margin-bottom: 8rem">
        <nav class="navbar navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @{
                    if (Session["idUsuario"] != null)
                    {
                        @:<a class="text-light text-decoration-none" href="/Login/Logout">Cerrar sesión</a>
                    }
                    else
                    {
                        @:<a class="text-light text-decoration-none" href="/Login">Iniciar sesión</a>
                    }
                }
                <div class="offcanvas offcanvas-start text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Menú</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link" href="/Home"><i class="bi bi-house"></i>Inicio</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Products"><i class="bi bi-archive"></i>Productos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Orders"><i class="bi bi-basket"></i>Ordenes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Businesses"><i class="bi bi-basket"></i>Sucursales</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Brands">Marcas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Colors">Colores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Capacities">Capacidades</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Categories">Categorias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Subcategories">Subcategorias</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Users"><i class="bi bi-person"></i>Usuarios</a>
                            </li>
                        </ul>
                        <form class="d-flex mt-3" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-success" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>

    </header>

    <script src="~/Scripts/jquery-3.6.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/navbar.js"></script>

    <main>
        <div id="page-container" class="mt-4">
            <div id="content-wrap" class="container-fluid body-content">
                @RenderBody()
                <br />
            </div>
        </div>
    </main>

    <footer id="footer" class="text-center bg-dark text-white d-flex align-items-center justify-content-center">
        <p id="footerText" class="m-0 text-center px-3" style="font-size: 1.1rem">Todos los derechos reservados @DateTime.Now.Year &copy; </p>
    </footer>

</body>
</html>