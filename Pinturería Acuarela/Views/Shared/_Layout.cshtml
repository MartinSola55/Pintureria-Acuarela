<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pinturería Acuarela</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/navbar.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="icon" type="image/jpg" href="~/Content/Images/favicon.png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-custom navbar-mainbg py-3">
            <a class="navbar-brand navbar-logo" href="/Home">
                <img src="~/Content/Images/logo-acuarela.png" alt="Logo" style="max-width: 300px; max-height: 40px">
            </a>
            <div id="navbtn">
                <button class="navbar-toggler btn-close-white" type="button" aria-controls="navbarContainer" aria-expanded="false" aria-label="Cerrar navegación">
                    <i class="bi bi-list"></i>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbarContainer">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home"><i class="bi bi-house"></i>Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Productos"><i class="bi bi-archive"></i>Productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Sucursales"><i class="bi bi-basket"></i>Sucursales</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Usuarios"><i class="bi bi-person"></i>Usuarios</a>
                    </li>
                    @{
                        if (Session["idUsuario"] != null)
                        {
                            @:<li class="nav-item" id="logout">
                                @:<a class="nav-link" href="/Login/CerrarSesion">Cerrar sesión</a>
                            @:</li>
                        }
                        else
                        {
                            @:<li class="nav-item" id="login">
                                @:<a class="nav-link" href="/Login">Iniciar sesión</a>
                            @:</li>
                        }
                    }
                </ul>
            </div>
        </nav>
    </header>

    <main>
        <div id="page-container" class="mt-4">
            <div id="content-wrap" class="container-fluid body-content">
                @RenderBody()
                <br />
            </div>
        </div>
    </main>

    <footer id="footer" class="text-center bg-dark text-white d-flex align-items-center justify-content-center">
        <p id="footerText" class="m-0 text-center px-3" style="font-size: 1.1rem">Todos los derechos reservados @DateTime.Now.Year &copy; </p>
    </footer>

    <script src="~/Scripts/jquery-3.6.3.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/navbar.js"></script>
</body>
</html>