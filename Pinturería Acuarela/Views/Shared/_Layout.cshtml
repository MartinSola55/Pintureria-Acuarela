    <link rel="icon" type="image/jpg" href="~/Content/Images/favicon.png" />
</head>
<body>
    <header>
        @*<nav class="navbar navbar-expand-custom navbar-mainbg py-3">
            <a class="navbar-brand navbar-logo" href="/Home">
