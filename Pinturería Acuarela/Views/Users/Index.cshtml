@model IEnumerable<Pinturería_Acuarela.User>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Agregar un usuario", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Email
        </th>
        <th>
            Sucursal
        </th>
        <th>
            Rol
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Business.adress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rol.description)
        </td>
        <td>
            <div class="d-flex flex-row justify-content-center">
                <a class='btn btn-success me-4' href="Users/Edit/@item.id"><i class='bi bi-pencil-square'></i></a>
                <a class='btn btn-danger ms-4' href="Users/Delete/@item.id"><i class='bi bi-trash3'></i></a>
            </div>
        </td>
    </tr>
}

</table>
