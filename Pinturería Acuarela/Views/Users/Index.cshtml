@model IEnumerable<Pinturería_Acuarela.User>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Agregar un usuario", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Email
        </th>
        <th>
            Sucursal
        </th>
        <th>
            Rol
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Business.adress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rol.description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
